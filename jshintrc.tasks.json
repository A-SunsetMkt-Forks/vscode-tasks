{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "tasks": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "options": {
                        "type": "object",
                        "properties": {
                            "statusbar": {
                                "type": "object",
                                "description": "Provided by extension:tasks.\nSet the task to display in the statusbar.",
                                "properties": {
                                    "hide": {
                                        "type": "boolean",
                                        "default": true,
                                        "description": "Provided by extension:tasks.\nSet it as \"hide\"to hide the task on statusbar."
                                    },
                                    "label": {
                                        "type": "string",
                                        "default": "name for statusbar",
                                        "description": "Provided by extension:tasks.\nCustom task name to show on statusbar."
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
